<!DOCTYPE html>
<html lang="pl">
    <head>
        <title> Gamex - blog for real gamers </title>
        <meta charset="utf-8" />
        <link id="pagestyle" rel="stylesheet" href="./css/indexstyle.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        
    </head>

    <body>
        <%- include("./../navbar") %>
        <div class="parallax"><img id="logo" src="./images/logo-trans.png"></div>
        <div class="container">
            <h1 style="color:white; margin-top: 35%; margin-left: 2%;">Latest posts:</h1>
            <% if(user != null) { %>
            <a href="./articles/new" class="btn btn-info" style="margin-top: 10%;">Add post</a>
            <% } %>
                <% articles.forEach(article => { %>
                    <div class="card mt-5 mb-5 " onclick='location.href="articles/<%= article.id %>"' style="cursor: pointer;">
                        <div class="card-body" style="background-color: grey;">
                            <h4 class="card-title"><%= article.title %></h4>
                            <div class="card-subtitle font-weight-bold mb-4"><%= article.createdAt.toLocaleDateString() %></div>
                            <div class="card-text mb-2"><%= article.description.slice(0,200)+"..." %></div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            
                <div class="pause"></div>
            <div class="parallax"></div>
            
        </body>
        <script src="./scripts/random_background.js"></script>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        
        </html>